{
  "manifest_version": 3,
  "name": "Liberator",
  "description": "Set your AI chats free. Unify conversations across ChatGPT, Claude, Gemini, and more in one searchable, local-first database.",
  "version": "0.2.1",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "tabs",
    "storage",
    "scripting",
    "downloads",
    "activeTab",
    "alarms",
    "nativeMessaging"
  ],
  "host_permissions": [
    "https://chatgpt.com/*",
    "https://chat.openai.com/*",
    "https://gemini.google.com/*",
    "https://claude.ai/*",
    "https://grok.com/*",
    "https://x.com/*",
    "https://copilot.microsoft.com/*",
    "https://m365.cloud.microsoft/*",
    "https://127.0.0.1:*/*",
    "http://127.0.0.1:*/*"
  ],
  "action": {
    "default_popup": "ui/popup.html",
    "default_title": "Liberator",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png"
    }
  },
  "options_page": "ui/options.html",
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://chatgpt.com/*", "https://chat.openai.com/*"],
      "js": ["shared/logger.js", "shared/auto-sync.js", "content/utils.js", "content/chatgpt.js", "content/sync-overlay.js", "content/command-palette.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://gemini.google.com/*"],
      "js": ["shared/logger.js", "shared/auto-sync.js", "content/utils.js", "content/gemini.js", "content/sync-overlay.js", "content/command-palette.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://claude.ai/*"],
      "js": ["shared/logger.js", "shared/auto-sync.js", "content/utils.js", "content/claude.js", "content/sync-overlay.js", "content/command-palette.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://grok.com/*"],
      "js": ["shared/logger.js", "shared/auto-sync.js", "content/utils.js", "content/grok.js", "content/sync-overlay.js", "content/command-palette.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://x.com/i/grok*"],
      "js": ["shared/logger.js", "shared/auto-sync.js", "content/utils.js", "content/grok.js", "content/sync-overlay.js", "content/command-palette.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://copilot.microsoft.com/*"],
      "js": ["shared/logger.js", "shared/auto-sync.js", "content/utils.js", "content/copilot.js", "content/sync-overlay.js", "content/command-palette.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://m365.cloud.microsoft/*"],
      "js": ["shared/logger.js", "shared/auto-sync.js", "content/utils.js", "content/copilot.js", "content/sync-overlay.js", "content/command-palette.js"],
      "run_at": "document_idle"
    }
  ]
}
